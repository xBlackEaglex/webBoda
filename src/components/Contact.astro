<div id="contact" class="my-6">
    <form action="formspree.io/f/xkndgegb" method="POST" class="max-w-sm mx-auto">
        <div class="mb-5">
            <label class="block mb-2 text-sm font-medium text-gray-900">Nombre</label>
            <input 
            type="text"
            class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm p-2.5 rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full "
            placeholder="nombre y apellido"
            required
            ></input>
        </div>
        <div class="mb-5">
            <label class="block mb-2 text-sm font-medium text-gray-900">Cuantas Personas irán nos acompañaran (incluyéndote a ti)</label>
            <input
            type="number"
            class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 "
            placeholder="numero de personas"
            required
            />
        </div>
        <div class="mb-5">
            <label class="block mb-2 text-sm font-medium text-gray-900">Envíanos un lindo mensaje</label>
            <textarea
            class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 "
            placeholder="mensaje"
            required
            />
        </div>
        <button
        type="submit"
        class="text-azul bg-rosa-300 hover:bg-rosa-200 shadow-xl focus:outline-none focus:ring-offset-rosa-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
        >Registrar</button>
    </form>
</div>